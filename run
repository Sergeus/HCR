#!/bin/bash
[ $# -eq 0 ] && { echo "Give me a mode (eg: \"./run 3\")"; exit 1; }
rosmake charles &&
    {
        xterm -e "bash & roslaunch kinect_follower kinect_follower.launch" &
	xterm -e "bash & rosrun pocketsphinx recognizer.py" &
	xterm -e "bash & rosrun ros_speech_engine ros_speech_engine.py" & 
	xterm -e "bash & rosrun controlnode controlnode $1"
    }

